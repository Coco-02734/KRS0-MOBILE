<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#fff"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgfaskes"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_tes"/>
            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Matakuliah"
                android:layout_toRightOf="@+id/imgfaskes"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvKode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Matkul"
                android:layout_toRightOf="@+id/imgfaskes"
                android:gravity="center"
                android:fontFamily="@font/roboto_light"
                android:layout_below="@id/tvNama"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"/>
            <ImageView
                android:id="@+id/imggaris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/garis"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgfaskes"
                android:layout_below="@id/tvKode"/>
            <TextView
                android:id="@+id/tvPredikat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgfaskes"
                android:gravity="center"
                android:layout_below="@+id/imggaris"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtsks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SKS"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tvSks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtnilaiangka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N. Angka"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tvNa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtnilaihuruf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N. Huruf"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tvNh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>